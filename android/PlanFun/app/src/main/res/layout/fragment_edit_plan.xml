    <LinearLayout
        android:id="@+id/timeLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/time_picker"
                android:editable="false"
                android:focusable="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:met_floatingLabelText="Starting Time"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelAlwaysShown="true"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/dateAdder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SET Date"
                android:theme="@style/ButtonTheme2"
                android:layout_weight="1"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/datePicker"
                android:editable="false"
                android:focusable="false"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:met_floatingLabelText="Date"
                app:met_floatingLabel="highlight"
                app:met_floatingLabelAlwaysShown="true"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/items_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/md_button_height"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/md_button_height"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:weightSum="7">


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="@dimen/md_button_height"
            android:id="@+id/privateBox"
            android:textColor="#80000000"
            android:text="Private"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/md_button_height"
            android:id="@+id/save_plan"
            android:text="Save Plan"
            android:theme="@style/ButtonTheme"
            android:layout_weight="6"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>