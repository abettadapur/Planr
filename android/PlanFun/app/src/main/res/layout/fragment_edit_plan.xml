<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Plan Name"
        app:met_floatingLabel="normal"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/city_picker"
        android:editable="false"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Starting Place"
        app:met_floatingLabel="normal"/>

    <LinearLayout
        android:id="@+id/timeLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/time_picker"
                android:editable="false"
                android:focusable="false"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Starting Time"
                app:met_floatingLabel="normal"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/date_adder"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="SET Date"
                android:theme="@style/ButtonTheme2"
                android:layout_weight="1"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/date_picker"
                android:editable="false"
                android:focusable="false"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Date"
                app:met_floatingLabel="normal"
                android:layout_weight="1"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/items_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/md_button_height"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/md_button_height"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:weightSum="7">


        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="@dimen/md_button_height"
            android:id="@+id/privateBox"
            android:textColor="#80000000"
            android:text="Private"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/md_button_height"
            android:id="@+id/save_plan"
            android:text="Save Plan"
            android:theme="@style/ButtonTheme"
            android:layout_weight="6"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>