<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/item_place_picker"
        android:editable="false"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Near"
        app:met_floatingLabel="highlight"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/item_search_categories"
        android:editable="false"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Categories"
        app:met_floatingLabel="highlight"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/item_search_term"
        android:editable="false"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search Term"
        app:met_floatingLabel="highlight"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/dividers"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Options"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="@color/dividers"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/item_search_results"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/md_button_height"/>

        <ProgressBar
            android:id="@+id/item_search_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/md_button_height"
            android:indeterminate="true"
            android:visibility="gone"
            android:theme="@android:style/Widget.ProgressBar.Small.Inverse"/>


            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/md_button_height"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/cancel_item_add"
                android:theme="@style/ButtonThemeCancel"
                android:text="Cancel"/>

    </RelativeLayout>

</LinearLayout>