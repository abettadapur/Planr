<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical" android:id="@+id/item_layout">

    <include android:id="@+id/itemYelpEntryView"
        layout="@layout/view_yelp_entry"/>

    <LinearLayout
        android:id="@+id/itemNoteLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id = "@+id/itemNoteView"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Note: "
            />

        <TextView
            android:id = "@+id/itemNoteContentView"
            android:text="..."
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">

        <TextView
            android:id = "@+id/startTimeView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

        <TextView
            android:id = "@+id/timeDivView"
            android:text=" - "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

        <TextView
            android:id = "@+id/endTimeView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />

    </LinearLayout>

</LinearLayout>